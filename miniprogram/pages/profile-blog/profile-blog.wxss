/* pages/profile-blog/profile-blog.wxss */
page {
  background-color: #EDEDED;
}

.header {
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 999;
  padding-bottom: 10rpx;
}

.container .main {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.container .main .main-item {
  display: flex;
  flex-direction: row;
  overflow: hidden;
  margin-top: 16rpx;
}

.container .main .main-item movable-area {
  width: 532rpx;
  height: 180rpx;
  background: #fff;
}

.container .main .main-item movable-area movable-view {
  width: 716rpx;
  height: 180rpx;
}

.container .main .main-item movable-area movable-view .item {
  box-sizing: border-box;
  height: 180rpx;
  border-radius: 10rpx;
  padding-left: 10px;
  background: #dedede;
  padding-top: 24rpx;
}

.container .main .main-item movable-area movable-view .item .row {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.container .main .main-item movable-area movable-view .item .row .avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.container .main .main-item movable-area movable-view .item .row .time {
  color: #939393;
  font-size: 24rpx;
}

.container .main .main-item movable-area movable-view .item .item-content {
  color: #636060;
}

.container .main .main-item .delete-btn {
  width: 184rpx;
  height: 180rpx;
  background-color: #4e96a7;
  border-top-right-radius: 10px;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  line-height: 180rpx;
}

.ellipsis {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
}
