.container1 {
  padding: 20rpx;
}

.content {
  width: 100%;
  height: 360rpx;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  background-color: #fefefe;
  color: #333;
  padding: 10rpx;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
}

.image-wrap {
  width: 220rpx;
  height: 220rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  position: relative;
  overflow: hidden;
  background-color: #fefefe;
}

.image {
  width: 100%;
  height: 100%;
}

.icon-shanchu {
  position: absolute;
  top: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
  background-color: #000;
  opacity: 0.4;
  color: #fff;
  text-align: center;
  line-height: 40rpx;
  font-size: 38rpx;
  font-weight: bolder;
}

.selectphone {
  border: 2rpx dashed #ccc;
  position: relative;
  background-color: #f8f8f8;
}

.icon-appmsg-create {
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  color: #ccc;
  font-size: 90rpx;
}

.footer {
  position: fixed;
  width: 100%;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
  -ms-flex-align: center;
  align-items: center;
  padding: 40rpx;
  background: #f1f1f1;
}

.words-num {
  -webkit-box-flex: 1;
  -ms-flex: 1;
  flex: 1;
  text-align: right;
  color: #474747;
  font-size: 32rpx;
  padding-right: 40rpx;
}

.send-btn {
  background: #4e96a7;
  color: #fff;
  font-size: 28rpx;
  width: 200rpx;
}