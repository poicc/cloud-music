<!--pages/publish/publish.wxml-->
<navigation showIcon="{{true}}" title='发现'></navigation>
<view class="container1">
  <textarea class="content" placeholder="分享新鲜事..." bindinput="onInput" maxlength="140" auto-focus bindfocus="onFocus"
    bindblur="onBlur"></textarea>

  <view class="image-list">
    <block wx:for="{{images}}" wx:key="*this">
      <view class="image-wrap">
        <image class="image" src="{{item}}" mode="aspectFill" bind:tap="onPreviewImage" data-imgsrc="{{item}}"></image>
        <i class="iconfont icon-shanchu" bindtap="onDelImage" data-index="{{index}}"></i>
      </view>
    </block>
    <!-- +号选择图片的容器 -->
    <view class="image-wrap selectphone" hidden="{{!selectPhoto}}" bindtap="onChooseImage">
      <i class="iconfont icon-appmsg-create"></i>
    </view>
  </view>
</view>

<view class="footer" style="bottom:{{footerBottom}}rpx">
  <text class="words-num">{{wordsNum}}</text>
  <button class="send-btn" bind:tap="send">发布</button>
</view>