.container{
  display: flex;
  align-items: center;
}

.control{
  flex: 1;
  position: relative;
}

.movable-area{
  width: 100%;
  height: 34rpx;
  position: absolute;
  bottom: -8rpx;
  left: 0;
}

.movable-view{
  width: 50rpx;
  height: 50rpx;
  background-color:#fff;
  border-radius: 50%;
}

.time{
  color: #fff;
  font-size: 30rpx;
  width: 42px;
  padding: 0 10rpx;
  font-weight: 400;
}